{
  "name": "@tuimao/config",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "目前包含 Vue3 Eslint 预设，tailwind 预设。\r 使用文档暂未开发，请自行运量使用。",
  "scripts": {
    "build": "esno scripts/build.ts",
    "build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup -c",
    "publish:lerna": "lerna publish --contents dist",
    "publish:cli": "esno scripts/publish.ts",
    "update": "esno scripts/update.ts",
    "clean": "rimraf dist packages/*/dist",
    "test": "cross-env NODE_ENV=test yarn clean && jest --collectCoverage=false",
    "test:cov": "cross-env NODE_ENV=test yarn clean && jest",
    "test:watch": "cross-env NODE_ENV=test yarn clean && jest ---watch --verbose --coverage",
    "prepublishOnly": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TuiMao233/tuimao-scope.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TuiMao233/tuimao-scope/issues"
  },
  "homepage": "https://github.com/TuiMao233/tuimao-scope#readme",
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "esbuild-register": "^2.6.0",
    "esno": "^0.8.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "nodejs-fs-utils": "^1.2.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-esbuild": "^4.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.0-next.12",
    "typescript": "^4.3.5"
  }
}
