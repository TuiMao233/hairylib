{
  "name": "<%= options.name %>",
  "version": "0.0.0",
  "main": "index.ts",
  "publishConfig": {
    <%_ if (options.type === 'universal') { -%>
    "main": "index.cjs.js",
    "types": "./index.d.ts",
    "module": "./index.esm.js",
    "unpkg": "./index.iife.min.js",
    "jsdelivr": "./index.iife.min.js",
    "exports": {
      ".": {
        "import": "./index.esm.js",
        "require": "./index.cjs.js"
      },
      "./*": "./*"
    },
    <%_ } -%>
    <%_ if (options.type === 'node') { -%>
      "main": "index.js",
      <% } -%>
    <%_ if (options.type === 'node') { -%>
      "main": "index.cjs.js",
      "types": "./index.d.ts",
      "module": "./index.esm.js",
      "exports": {
        ".": {
          "import": "./index.esm.js",
          "require": "./index.cjs.js"
        },
        "./*": "./*"
      },
    <%_ } -%>
    "directory": "dist"
  },
  "scripts": {
    <%_ if (options.type === 'universal') { -%>
    "build": "hairy build --esllpkg --type"
    <%_ } -%>
    <%_ if (options.type === 'node-universal') { -%>
    "build": "hairy build --esllpkg --pmode esm/cjs --type"
    <%_ } -%>
    <%_ if (options.type === 'node') { -%>
    "build": "hairy build"
    <%_ } -%>
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4"
  },
  "devDependencies": {
    "@types/lodash": "^4"
  }
}
