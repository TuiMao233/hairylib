{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "package",
    "types": [
      "@dcloudio/types",
      "node"
    ]
  },
  "exclude": [
    "**/__tests__/*.ts",
    "**/__test__/*.ts"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "types/**.d.ts",
    "types/**/**.d.ts",
  ]
}