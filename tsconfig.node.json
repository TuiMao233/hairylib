{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  
  "exclude": [
    "**/__tests__/*.ts",
    "**/__test__/*.ts",
    "./dist"
  ]
}