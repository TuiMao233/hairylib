{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "package"
  },
  "exclude": [
    "**/__tests__/*.ts",
    "**/__test__/*.ts"
  ]
}