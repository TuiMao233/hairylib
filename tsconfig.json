{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "package",
    "paths": {
      "@tuimao/axios": ["./packages/axios/*"],
      "@tuimao/browser": ["./packages/browser/*"],
      "@tuimao/core": ["./packages/core/index.ts"],
      "@tuimao/uni-utils": ["./packages/uni-utils/*"],
      "@tuimao/utils": ["./packages/utils/*"],
      "@tuimao/vue-use": ["./packages/vue-use/*"],
      "@tuimao/vue-utils": ["./packages/vue-utils/*"]
    }
  },
  "exclude": [
    "**/__tests__/*.ts",
    "**/__test__/*.ts"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "types/**.d.ts",
    "types/**/**.d.ts",
  ]
}